{
  "name": "contracts",
  "version": "0.0.1",
  "description": "Smart contracts for Cronos Agentic Treasury",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "compile:force": "hardhat clean && hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "typechain": "hardhat typechain",
    "node": "hardhat node",
    "node:fork-mainnet": "hardhat node --fork https://evm-rpc.cronos.org",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network cronosTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network cronosMainnet",
    "deploy:localhost": "hardhat run scripts/deploy.ts --network localhost",
    "verify:testnet": "hardhat verify --network cronosTestnet",
    "verify:mainnet": "hardhat verify --network cronosMainnet",
    "accounts": "hardhat accounts",
    "balance": "hardhat run scripts/balance.ts",
    "balance:testnet": "hardhat run scripts/balance.ts --network cronosTestnet",
    "balance:mainnet": "hardhat run scripts/balance.ts --network cronosMainnet",
    "clean": "hardhat clean",
    "flatten": "hardhat flatten",
    "gas-report": "hardhat test --reporter-options outputFile=gas-report.txt",
    "check": "npm run compile && npm run test",
    "ci": "npm run compile && npm run test:coverage",
    "lint": "eslint --ext .ts .",
    "format": "prettier --write \"**/*.{ts,sol}\"",
    "format:check": "prettier --check \"**/*.{ts,sol}\""
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.17",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.0.0",
    "ethers": "^6.11.0",
    "hardhat": "^2.22.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.0",
    "mocha": "^10.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
